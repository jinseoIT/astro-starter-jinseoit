---
import type { CollectionEntry } from "astro:content";
import PostCard from "./PostCard.astro";

interface Props {
  posts: CollectionEntry<"posts">[];
  visibleCount?: number;
}

const { posts, visibleCount = posts.length } = Astro.props;
const postsToShow = posts.slice(0, visibleCount);
---

<ul class="flex list-none flex-col gap-6 px-6" id="post-list">
  {postsToShow.map((post) => <PostCard post={post} />)}
</ul>
