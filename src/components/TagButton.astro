---
interface Props {
  tag: string;
  count: number;
}

const { tag, count } = Astro.props;
---

<button
  class="tag-btn transition-theme text-theme-secondary hover:text-primary relative p-0 text-sm font-normal duration-200"
  data-tag={tag}
  data-posts-count={count}
>
  {tag === "all" ? `전체 (${count})` : `${tag} (${count})`}
</button>

<style>
  .tag-btn.active::after {
    content: "";
    position: absolute;
    bottom: -2px;
    left: 0;
    right: 0;
    height: 2px;
    color: var(--primary-color);
    background-color: var(--primary-color);
    border-radius: 1px;
  }

  .tag-btn.active {
    color: var(--primary-color) !important;
    /* font-weight 대신 text-shadow 사용으로 layout shift 방지 */
    text-shadow: 0 0 0.5px var(--primary-color);
    position: relative;
  }
</style>
